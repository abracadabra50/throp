{
  "name": "throp",
  "version": "0.2.1",
  "description": "lowercase chaotic twitter / x bot for responding to user mentions with ai-generated answers and proactive tweets.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx bin/throp.ts",
    "dev:api": "tsx src/api/start.ts",
    "tweet": "tsx bin/tweet.ts",
    "tweet:interactive": "tsx bin/tweet.ts --interactive",
    "monitor": "tsx bin/monitor-quotes.ts",
    "monitor:test": "tsx bin/monitor-quotes.ts --test",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "prepare": "husky install",
    "build": "tsc",
    "start": "node dist/bin/throp.js",
    "start:api": "node dist/src/api/start.js",
    "start:bot": "node dist/bin/throp.js",
    "start:monitor": "node dist/bin/monitor-quotes.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@langchain/core": "^0.3.0",
    "chalk": "^5.3.0",
    "cleye": "^1.3.4",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "ky": "^1.8.2",
    "oauth": "^0.10.2",
    "p-retry": "^6.2.0",
    "p-throttle": "^7.0.0",
    "socket.io": "^4.8.1",
    "twitter-api-v2": "^1.16.1",
    "ws": "^8.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/ws": "^8.5.10",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "twitter",
    "bot",
    "ai",
    "perplexity",
    "chaos",
    "meme",
    "throp"
  ],
  "author": "Zishan",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
