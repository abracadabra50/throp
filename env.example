# API Mode Configuration
# Set to true for web interface only (no Twitter bot)
API_ONLY_MODE=false

# Admin Authentication
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=

# Twitter/X API Configuration (Optional if API_ONLY_MODE=true)
# Get these from https://developer.twitter.com/
TWITTER_API_KEY=
TWITTER_API_SECRET_KEY=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# Twitter API Plan (basic, pro, or enterprise)
# This determines rate limiting and quota management
TWITTER_API_PLAN=basic

# Twitter Bot Configuration
TWITTER_BOT_USERNAME=throp
TWITTER_BOT_USER_ID=

# OAuth Configuration (via Nango)
# Required for Twitter OAuth 2.0
# Get from https://app.nango.dev/
NANGO_SECRET_KEY=
NANGO_CONNECTION_ID=
TWITTER_OAUTH_CLIENT_ID=
TWITTER_OAUTH_CLIENT_SECRET=

# Redis Configuration (optional but highly recommended)
# Used for state persistence and caching Twitter objects
REDIS_URL=redis://localhost:6379
REDIS_NAMESPACE=throp

# OpenAI Configuration
# Primary answer engine
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Perplexity Configuration (MAIN ANSWER ENGINE)
PERPLEXITY_API_KEY=
PERPLEXITY_MODEL=sonar
PERPLEXITY_MAX_TOKENS=1000
PERPLEXITY_TEMPERATURE=0.7

# Dexa Configuration (optional, currently in private beta)
DEXA_API_KEY=

# Bot Behaviour Configuration
MAX_MENTIONS_PER_BATCH=10
DRY_RUN=false
DEBUG=false
ANSWER_ENGINE=perplexity

# Content Moderation
ENABLE_CONTENT_MODERATION=true
MODERATION_THRESHOLD=0.7

# Response Configuration
MAX_TWEET_LENGTH=280
ENABLE_THREAD_RESPONSES=true
MAX_THREAD_LENGTH=5

# Rate Limiting (tweets per hour)
MAX_TWEETS_PER_HOUR=30

# Feature Flags
ENABLE_IMAGE_ANALYSIS=false
ENABLE_LINK_EXPANSION=true
ENABLE_QUOTE_TWEET_CONTEXT=true
ENABLE_USER_PROFILE_CONTEXT=true

# API Server Configuration
API_PORT=3001
FRONTEND_URL=http://localhost:3000

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info
